{
    "name": "Stop Wasting Time",
    "version": "1.0.0",
    "manifest_version": 2,
    "description": "Blocks access to user-specified websites during user-specified times",
    "icons": {
        "16": "swt.png"
    },

    "options_ui": {
        "page": "options.html",
        "chrome_style": true,
        "open_in_tab": true
    },

    "background": {
        "scripts": [
            "background.js"
        ]
    },

    "permissions": [
        "webRequest",
        "tabs",
        "http://*/*",
        "https://*/*",
        "webRequestBlocking",
        "storage"
    ],

    "web_accessible_resources": [
        "index.html"
    ]
}